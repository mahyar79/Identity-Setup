<div class="d-flex justify-content-between mb-3">
    <h2>Manage Countries</h2>
    <a asp-controller="ManageCountry" asp-action="Create" class="btn btn-success">Add New Country</a>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Country Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var country in Model)
        {
            <tr>
                <td>@country.Id</td>
                <td>@country.Name</td>
                <td>
                    <!-- Edit Button -->
                    <a asp-controller="ManageCountry" asp-action="Edit" asp-route-id="@country.Id" class="btn btn-primary">Edit</a>

                    <!-- Delete Form -->
                    <form asp-controller="ManageCountry" asp-action="Delete" asp-route-id="@country.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this country?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
